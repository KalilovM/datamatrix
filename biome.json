{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["test"],
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": ["**/**/*.tsx", "**/**/*.ts"],
		"ignore": ["**/*.min.js"]
	}
}
