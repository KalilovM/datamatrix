# =============================================================================
# PRODUCTION ENVIRONMENT TEMPLATE (.env.prod.example)
# =============================================================================
# Copy this file to /etc/datamatrix/.env on your VPS
# Set proper permissions: chmod 600 /etc/datamatrix/.env
# NEVER commit production secrets to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Core Settings
# -----------------------------------------------------------------------------
NODE_ENV=production

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Production database - use strong password!
# Generate password: openssl rand -base64 24
DATABASE_URL="postgresql://datamatrix_user:STRONG_PASSWORD_HERE@localhost:5432/datamatrix_prod?schema=public"

# -----------------------------------------------------------------------------
# NextAuth Configuration
# -----------------------------------------------------------------------------
# CRITICAL: Generate unique secret for production
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="GENERATE_ME_openssl_rand_base64_32"
# Your production domain with HTTPS
NEXTAUTH_URL="https://yourdomain.com"

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
# CRITICAL: Generate unique secret for production
# Generate with: openssl rand -base64 32
SESSION_SECRET="GENERATE_ME_openssl_rand_base64_32"

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
NEXT_API_URL="https://yourdomain.com"
APP_DOMAIN="yourdomain.com"

# -----------------------------------------------------------------------------
# SSL/Certbot Configuration
# -----------------------------------------------------------------------------
# Email for Let's Encrypt certificate notifications
SSL_EMAIL="admin@yourdomain.com"

# -----------------------------------------------------------------------------
# Production Settings
# -----------------------------------------------------------------------------
# Minimal logging in production
LOG_LEVEL=error
# Disable debug features
DEBUG_PRISMA=false

# -----------------------------------------------------------------------------
# NEXT_PUBLIC_* Variables (Exposed to Browser)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME="DataMatrix"
NEXT_PUBLIC_API_URL="https://yourdomain.com"

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port for Next.js server (Nginx proxies to this)
PORT=3000
# Hostname binding
HOSTNAME="127.0.0.1"
