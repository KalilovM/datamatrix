# =============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT (.env.local)
# =============================================================================
# Copy this file to .env.local for local development
# NEVER commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Core Settings
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Local development database (Docker or local Postgres)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/datamatrix_dev?schema=public"

# -----------------------------------------------------------------------------
# NextAuth Configuration
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="dev-secret-change-in-production-openssl-rand-base64-32"
# Local development URL
NEXTAUTH_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
SESSION_SECRET="dev-session-secret-change-in-production"

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
NEXT_API_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# Development Flags
# -----------------------------------------------------------------------------
# Enable verbose logging in development
LOG_LEVEL=debug
# Enable Prisma query logging
DEBUG_PRISMA=true

# -----------------------------------------------------------------------------
# NEXT_PUBLIC_* Variables (Exposed to Browser)
# -----------------------------------------------------------------------------
# These are bundled into the client-side JavaScript
# Do NOT put secrets here!
NEXT_PUBLIC_APP_NAME="DataMatrix Dev"
NEXT_PUBLIC_API_URL="http://localhost:3000"
