{
  "name": "datamatrix_new",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "echo 'No tests configured yet'",
    "validate": "npm run lint && npm run typecheck",
    "build:local": "npm run validate && npm run build",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:deploy": "npx prisma migrate deploy && npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev --name",
    "prisma:push": "npx prisma db push && npx prisma generate",
    "prisma:reset-dev": "run-s prisma:wipe prisma:seed dev",
    "prisma:seed": "tsx prisma/seed.js",
    "prisma:setup": "prisma generate && prisma migrate deploy",
    "prisma:studio": "npx prisma studio",
    "prisma:wipe": "npx prisma migrate reset --force && npx prisma db push",
    "prod:build": "NODE_ENV=production npm run build",
    "prod:start": "NODE_ENV=production next start -H 127.0.0.1 -p 3000",
    "prod:pm2": "pm2 start ecosystem.config.cjs",
    "prod:pm2:restart": "pm2 reload datamatrix --update-env",
    "prod:pm2:stop": "pm2 stop datamatrix",
    "prod:pm2:logs": "pm2 logs datamatrix",
    "deploy": "./scripts/deploy.sh",
    "health": "curl -sf http://127.0.0.1:3000/api/health || exit 1"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@prisma/client": "^6.3.1",
    "@tanstack/react-query": "^5.67.1",
    "autoprefixer": "^10.4.20",
    "bwip-js": "^4.5.1",
    "clsx": "^2.1.1",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.7",
    "file-saver": "^2.0.5",
    "gs1-barcode-parser-mod": "^1.0.7",
    "iconv-lite": "^0.6.3",
    "jose": "^5.9.6",
    "js-cookie": "^3.0.5",
    "nanoid": "^5.1.3",
    "next": "15.1.7",
    "next-auth": "^4.24.11",
    "papaparse": "^5.5.2",
    "postcss-import": "^16.1.0",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-select": "^5.10.0",
    "react-toastify": "^11.0.3",
    "server-only": "^0.0.1",
    "tsx": "^4.19.2",
    "uuid": "^11.0.5",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.0.9",
    "@tanstack/eslint-plugin-query": "^5.66.1",
    "@types/bcrypt": "^5.0.2",
    "@types/file-saver": "^2.0.7",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/papaparse": "^5.3.15",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "postcss": "^8",
    "prisma": "^6.3.1",
    "tailwindcss": "^4.0.9",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
